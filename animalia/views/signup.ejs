<%- include('templates/header', {active : ''}) %>

<main>
  <div class="container">
    <div class="section-heading">
      <div class="py-5">
        <h3 class="text-center text-secondary heading">Create New Account</h3>
      </div>
    </div>

    <div class="row">
      <div class="col-lg-8 col-md-10 mb-5 mx-auto">
        <div class="card">
          <div class="card-body">
            <form action="/signup" method="post" class="form">
              <div class="form-group mb-3">
                <label for="fname"
                  >First Name : <span class="text-danger">*</span></label
                >
                <input
                  type="text"
                  name="fname"
                  placeholder="Enter Your First Name"
                  id=""
                  class="f-name form-control"
                  required
                />
              </div>

              <div class="form-group mb-3">
                <label for="lname"
                  >Last Name : <span class="text-danger">*</span></label
                >
                <input
                  type="text"
                  name="lname"
                  placeholder="Enter Your Last Name"
                  id=""
                  class="l-name form-control"
                  required
                />
              </div>

              <div class="from-group mb-3">
                <label for="email"
                  >Your Email : <span class="text-danger">*</span></label
                >
                <input
                  type="email"
                  name="email"
                  placeholder="Enter Your Email"
                  id=""
                  class="email form-control"
                  required
                />
              </div>

              <div class="form-group mb-3">
                <label for="password"
                  >Your Password : <span class="text-danger">*</span></label
                >
                <input
                  type="password"
                  name="password"
                  placeholder="Enter Your Password"
                  id=""
                  class="password form-control"
                  required
                />
              </div>

              <div class="form-group mb-3">
                <label for="c_password"
                  >Confirm Your Password :
                  <span class="text-danger">*</span></label
                >
                <input
                  type="password"
                  name="c_password"
                  placeholder="Confirm Your Password"
                  id=""
                  class="c-password form-control"
                  required
                />
              </div>

              <div class="form-group mb-3">
                <button type="submit" class="btn btn-success">Sign Up</button>
              </div>
            </form>
          </div>

          <div class="card-footer">
            <p class="lead">
              Have an account? <a href="/login" class="">Login Now</a>
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>
<!-- Main Section End -->

<%- include('templates/footer') %>
