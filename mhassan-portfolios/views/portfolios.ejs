<%- include('templates/user-header', { active : 'portfolios', title:
'Portfolios'}) %>

<section class="portfolios-wrapper" id="portfolio-section">
  <div class="container portfolios-container-wrap">
    <aricle class="section-heading">
      <h3>Portfolios</h3>
    </aricle>

    <div class="portfolios-wrap">
      <div class="row no-gutters" id="portfolios">
        <% portfolios.forEach( portfolio => { %>
        <div class="col-xl-3 col-lg-4 col-md-6 portfolio">
          <div class="sp-container">
            <div class="sp-img">
              <img
                src="img/images/<%= portfolio.cover_image %>"
                alt=""
                class="img-fluid"
              />
            </div>
            <div class="sp-details-wrap">
              <div class="sp-details">
                <h3 class="sp-name"><%= portfolio.name %></h3>
                <p class="sp-desc">
                  <%= portfolio.details.split('').splice(0, 20).join('') + '...'
                  %>
                </p>
                <a
                  href="/portfolios/<%= portfolio._id %>"
                  class="btn sp-link-btn"
                  >Details</a
                >
              </div>
            </div>
          </div>
        </div>
        <% }) %>
      </div>
    </div>
    <!-- All portfolios wrapper end -->
  </div>
</section>
<!-- Portfolios section wrapper end -->

<%- include('templates/footer') %>
